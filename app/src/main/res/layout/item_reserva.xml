<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_cubiculoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cubiculo: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_cubiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_usuarioLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario: "
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_hora_inicioLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora Inicio: "
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView_hora_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_hora_finLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora Final: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_hora_fin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
