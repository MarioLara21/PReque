<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gestion_usuarios">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="161dp"
        android:text="Gestión de \n usuarios"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewCorreo"
                android:text="Correo Electrónico"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNombre"
                android:text="Nombre"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewApellido"
                android:text="Apellido"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCarne"
                android:text="Carne"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewCedula"
                android:text="Cédula"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/button_revisar_historial"
        android:layout_width="195dp"
        android:layout_height="48dp"
        android:layout_marginTop="13dp"
        android:text="Revisar Historial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <Button
        android:id="@+id/button_eliminar_usuario"
        android:layout_width="197dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:text="Eliminar Usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_revisar_historial" />

    <Button
        android:id="@+id/button_volver_usuarios"
        android:layout_width="198dp"
        android:layout_height="38dp"
        android:text="Volver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_eliminar_usuario" />

</androidx.constraintlayout.widget.ConstraintLayout>
